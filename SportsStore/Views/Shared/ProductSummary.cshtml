@*  This is a partial view, which is a fragment of content that you can embed into another
view, rather like a template.*@

@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model?.Name
            <span class="badge rounded-pill bg-primary text-white" style="float:right">
                <!-- "c" parameter formats the numerical values as currency according to the culture settings of the server -->
                <small>@Model?.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">
        @Model?.Description
    </div>
</div>